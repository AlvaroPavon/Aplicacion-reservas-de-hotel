<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EditarProductoController" spacing="10">
    <Label text="Editar Producto" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label text="Nombre del Producto:" />
    <TextField fx:id="nombreField" promptText="Nombre" />
    <Label text="Descripción:" />
    <TextField fx:id="descripcionField" promptText="Descripción" />
    <Label text="Precio de Venta:" />
    <TextField fx:id="precioVentaField" promptText="Precio de Venta" />
    <Label text="Unidad de Medida:" />
    <TextField fx:id="unidadMedidaField" promptText="Unidad de Medida" />
    <Button text="Guardar Cambios" onAction="#handleGuardarCambios" />
</VBox>

